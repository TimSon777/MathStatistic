@model dynamic

@{
    ViewBag.Title = "Data entry";
    Layout = "_Layout";
}


<form method="post" asp-action="GetData" style="border-radius: 20px; padding: 20px;
display: flex; flex-direction: column; justify-content: space-evenly; background-color: #d9d4e8;
 text-transform: uppercase; color: #1d192d; font-weight: bold; font-size: 16px; gap: 20px; max-width: 500px;
margin: 0 auto">
    <p style="margin: 0 auto; font-size: 24px">Enter yout data</p>
    <div class="form-group">
        <label>File path</label>
        <input required="required" name="pathToFile" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Separator</label>
        <input required="required" name="separator" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Columns</label>
        <input required="required" name="columns" type="text" class="form-control" placeholder="0, 1, 2..."/>
    </div>
    <div class="form-group">
        <label>Probability</label>
        <input name="probability" type="number" step="any" class="form-control" placeholder="0.95"/>
    </div>
    <input class="btn" type="submit" value="submit" style="border-radius: 20px; 
width: fit-content; margin: 10px auto 0; background-color: #ac9dff; color: white; text-transform: uppercase"/>
</form>
